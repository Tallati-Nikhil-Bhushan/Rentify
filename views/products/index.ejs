<%-layout("layouts/boilerplate",{categories})%>
<div class="row">
<h1><%=sub_category%></h1>
<% for(let product of products){%>
<div class="col-md-4">
  <div class="my-3">
    <div class="card mb-3">
      <div class="row">
        <div class="col-md-4">
          <img
            class="rounded mx-auto d-block img-fluid"
            src="<%=product.images[0]?product.images[0].url:''%>"
          />
        </div>
        <div class="col-md-8">
          <div class="card-body">
            <h5 class="card-title"><%=product.title%></h5>
            <p class="card-text"><%=product.description%></p>
            <p class="card-text">
              <small class="text-muted"><%=product.location%></small>
            </p>
            <a class="btn btn-primary" href="/products/<%=product._id%>"
              >View <%=product.title%></a
            >
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<% } %>
</div>
<script>
  const products = { features: "<%-JSON.stringify(products)%>" };
</script>
