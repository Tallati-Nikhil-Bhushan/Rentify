<%-layout("layouts/boilerplate",{categories})%>
<div class="row">
  <h1><%=sub_category%></h1>
  <% for(let product of products){%>
  <div class="col-md-3">
    <div class="my-4">
      <div class="card mb-3" style="width: 18rem;">
          <img
            class="card-img-top rounded mx-auto d-block img-fluid"
            src="<%=product.images[0]?product.images[0].url:''%>"
            style="height: 10rem;"
          />
          <div class="card-body">
            <h5 class="card-title" style="white-space: nowrap;width: 16rem;overflow: hidden;text-overflow: ellipsis;"><%=product.title%></h5>
            <p class="card-text">
              <small class="text-muted">Category : <%=product.category%></small>
            </p>
            <p class="card-text">
              <small class="text-muted">Sub Category : <%=product.sub_category%></small>
            </p>
            <p class="card-text">
              <small class="text-muted">Location : <%=product.location%></small>
            </p>
            <a class="btn btn-primary" href="/products/<%=product._id%>"
              >View</a
            >
          </div>
      </div>
    </div>
  </div>
  <% } %>
</div>
<script>
  const products = { features: "<%-JSON.stringify(products)%>" };
</script>
